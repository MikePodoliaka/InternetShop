<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>internetShop.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllItems</servlet-name>
        <servlet-class>internetShop.controller.GetAllItemsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllItems</servlet-name>
        <url-pattern>/getAllItems</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>internetShop.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addItemToBucket</servlet-name>
        <servlet-class>internetShop.controller.AddItemToBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addItemToBucket</servlet-name>
        <url-pattern>/addItemToBucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bucket</servlet-name>
        <servlet-class>internetShop.controller.CreateBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bucket</servlet-name>
        <url-pattern>/bucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allUser</servlet-name>
        <servlet-class>internetShop.controller.AllUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUser</servlet-name>
        <url-pattern>/allUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>internetShop.controller.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addItem</servlet-name>
        <servlet-class>internetShop.controller.AddItemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addItem</servlet-name>
        <url-pattern>/addItem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Order</servlet-name>
        <servlet-class>internetShop.controller.CompleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Delete Item From Bucket</servlet-name>
        <servlet-class>internetShop.controller.DeleteItemFromBucket</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete Item From Bucket</servlet-name>
        <url-pattern>/deleteItem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getOrderToUserId</servlet-name>
        <servlet-class>internetShop.controller.GetAllUserOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getOrderToUserId</servlet-name>
        <url-pattern>/userOrders</url-pattern>
    </servlet-mapping>
<servlet>
    <servlet-name>Login_Controller</servlet-name>
    <servlet-class>internetShop.controller.LoginController</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>Login_Controller</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteOrder</servlet-name>
        <servlet-class>internetShop.controller.DeleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteOrder</servlet-name>
        <url-pattern>/deleteOrder</url-pattern>
    </servlet-mapping>
<servlet>
    <servlet-name>InjectDataController</servlet-name>
    <servlet-class>internetShop.controller.InjectDataController</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>InjectDataController</servlet-name>
        <url-pattern>/injectRole</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logoutController</servlet-name>
        <servlet-class>internetShop.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>Log Filter</filter-name>
        <filter-class>internetShop.web.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Log Filter</filter-name>
        <url-pattern>/allUser</url-pattern>
        <url-pattern>/addItem</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>authorizationFilter</filter-name>
        <filter-class>internetShop.web.filters.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorizationFilter</filter-name>
        <url-pattern>/allUser</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>internetShop.controller.InjectInitializer</listener-class>
    </listener>
</web-app>
