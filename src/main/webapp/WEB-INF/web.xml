<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>internetShop.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllItems</servlet-name>
        <servlet-class>internetShop.controller.GetAllItemsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllItems</servlet-name>
        <url-pattern>/getAllItems</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>internetShop.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addItemToBucket</servlet-name>
        <servlet-class>internetShop.controller.AddItemToBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addItemToBucket</servlet-name>
        <url-pattern>/addItemToBucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bucket</servlet-name>
        <servlet-class>internetShop.controller.CreateBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bucket</servlet-name>
        <url-pattern>/bucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allUser</servlet-name>
        <servlet-class>internetShop.controller.AllUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUser</servlet-name>
        <url-pattern>/allUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>internetShop.controller.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addItem</servlet-name>
        <servlet-class>internetShop.controller.AddItemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addItem</servlet-name>
        <url-pattern>/addItem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Order</servlet-name>
        <servlet-class>internetShop.controller.CompleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Delete Item From Bucket</servlet-name>
        <servlet-class>internetShop.controller.DeleteItemFromBucket</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete Item From Bucket</servlet-name>
        <url-pattern>/deleteItem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getOrderToUserId</servlet-name>
        <servlet-class>internetShop.controller.GetOrderToUserIdController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getOrderToUserId</servlet-name>
        <url-pattern>/getOrder</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>internetShop.controller.InjectInitializer</listener-class>
    </listener>
</web-app>
